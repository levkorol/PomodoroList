<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PomodoroList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/middle</item>
        <item name="colorPrimaryVariant">@color/darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/middle</item>
        <item name="colorSecondaryVariant">@color/middle</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/load_bg</item>
        <item name="android:fontFamily">@font/roboto_slab_regular</item>
    </style>


    <!--    bottom_menu-->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--    splash screen-->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--        <item name="android:windowBackground">@drawable/pick_splash_screen</item>-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
    </style>

    <style name="tabText" parent="@android:style/TextAppearance.Widget.TabWidget">
<!--        <item name="android:fontFamily">@font/roboto_slab_regular</item>-->
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="ButtonBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_baseline_arrow_back_24</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="ButtonToolBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

</resources>