<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <CheckedTextView
                android:id="@+id/desc_task"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checkMark="@null"
                android:drawableStart="?android:attr/listChoiceIndicatorSingle"
                android:drawableEnd="@null"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="Сделать что -ngndgAAAAsdv"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/pause_or_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_pause_24" />

            <!--            <TextView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginStart="-8dp"-->
            <!--                android:layout_marginEnd="8dp"-->
            <!--                android:textColor="@color/black"-->
            <!--                android:text="Сделать что - gndgndgndgndgndgndggndgndgndgndgndgngndgndgndgndgndgndgnAAAAAA"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">


            <!--            <ImageView-->
            <!--                android:id="@+id/priority"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="8dp"-->
            <!--                android:layout_marginStart="10dp"-->
            <!--                android:gravity="end|start"-->
            <!--                android:drawablePadding="8dp"-->
            <!--                android:src="@drawable/ic_label"/>-->

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="19:00" />

            <ImageView
                android:id="@+id/color_proj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:drawablePadding="8dp"
                android:src="@drawable/ic_circle" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>