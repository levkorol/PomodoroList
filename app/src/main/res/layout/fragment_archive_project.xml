<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?light"
    tools:background="@color/light"
    tools:context=".ui.projects.lists_projects.archive.ArchiveProjectFragment">

    <LinearLayout
        android:id="@+id/empty_list_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/image_statistic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textColor="@color/gray_normal_d"
            android:text="@string/archive_empty" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_archive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>