<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:orientation="vertical"
    tools:context=".ui.adding.AddProjectFragment">

    <RelativeLayout
        android:id="@+id/top_ll"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back"
            style="@style/ButtonToolBar"
            android:src="@drawable/ic_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_project"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_margin="16dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/save"
            style="@style/ButtonToolBar"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_done_24" />

    </RelativeLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:gravity="top|start"
        android:padding="8dp"
        android:layout_marginHorizontal="16dp"
        android:textSize="14sp"
        android:hint="Название проекта..."
        android:lines="3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:gravity="start|center"
        android:drawablePadding="6dp"
        android:padding="8dp"
        android:drawableStart="@drawable/icadd_24"
        android:text="Добавить задачу"
        android:layout_marginHorizontal="16dp"
        android:textSize="14sp"
        android:layout_marginTop="16dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:layout_marginHorizontal="16dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:gravity="top|start"
            android:padding="8dp"
            android:textSize="14sp"
            android:hint="@string/des_task"
            android:lines="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_date"
            android:drawablePadding="6dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_av_timer_24"
            android:drawablePadding="6dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_label"
            android:drawablePadding="6dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ГОТОВО"
            android:gravity="end"
            android:layout_marginEnd="8dp"
            android:drawablePadding="6dp"
            android:layout_weight="5"/>

    </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:gravity="start|center"
        android:drawablePadding="6dp"
        android:padding="8dp"
        android:drawableStart="@drawable/ic_arrow_down_24"
        android:layout_marginHorizontal="16dp"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:text="Дата дедлайна"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:gravity="start|center"
        android:layout_marginTop="16dp"
        android:drawablePadding="6dp"
        android:padding="8dp"
        android:drawableStart="@drawable/ic_price"
        android:layout_marginHorizontal="16dp"
        android:textSize="14sp"
        android:hint="Награда по завершению..."
        android:lines="1" />

</LinearLayout>